<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Dosis|Oxygen" rel="stylesheet">
    <link rel="stylesheet" href="../css/index.css">
    <style>
        p {
            color: black;
        }
    </style>
    <title>Miriam Rico - Adiestramiento canino</title>
</head>


<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col 12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
                <ul class="nav nav-inverse justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link active text-warning" href="/options"><i class="fa fa-2x fa-fw fa-cogs" aria-hidden="true"></i> Volver al panel de administracion</a>
                    </li>

                </ul>
                <% contactMessages.forEach( function(message, index) { %>
                    <div class="dropdown-divider"></div>
                    <div class="card-block <%= message.classReaded %>">
                        <ul class="list-group">

                            <li class="list-group-item list-group-item-success d-flex justify-content-between">
                                <strong>Received from:</strong>
                                <span class="ml-3 font-italic"><%= message.email %></span>
                                <form action="/contact/remove/<%= index %>" method="POST" class="ml-4 hidden-xs-down">
                                    <button type="submit" class="btn btn-danger "><i class="fa fa-fw fa-trash" aria-hidden="true"></i></button>
                                </form>

                            </li>
                            <li class="list-group-item list-group-item-warning d-flex justify-content-around">
                                <strong>At: </strong> <span class="ml-3"><%= message.createdAt.toDateString() %> || <%= message.createdAt.toLocaleTimeString() %></span>
                                <form action="/contact/remove/<%= index %>" method="POST" class="ml-4 hidden-sm-up">
                                    <button type="submit" class="btn btn-danger "><i class="fa fa-fw fa-trash" aria-hidden="true"></i></button>
                                </form>

                            </li>
                        </ul>
                        <div class="card">
                            <div class="card-block">
                                <p class="font-weight text-justify">
                                    <%= message.message %>
                                </p>
                                <div class="d-flex justify-content-end">
                                    <span class="font-weight-bold font-italic text-danger mr-2">Marcar como leido</span>
                                    <form action="/contact/readed/<%= index %>" method="POST">
                                        <button type="submit" class="btn btn-warning btn-sm"><i class="fa fa-check-square-o" aria-hidden="true"></i> 
                                        </button>
                                    </form>

                                </div>

                            </div>
                        </div>
                    </div>
                    <% } ) %>


            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=" crossorigin="anonymous"></script>
    <script>
        $('div.card').on('click', 'button.btn-sm', function() {
            $(this).removeClass('btn-warning').addClass('btn-success disabled');
        })
    </script>
</body>

</html>